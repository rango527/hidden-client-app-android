<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorGray_2"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/panel_top_rounded_white"
        android:padding="18dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:textColor="@color/colorGreen_1"
            android:lineHeight="25dp"
            android:text="shortlisted"/>

        <TextView
            android:id="@+id/text_shortlisted_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray_7"
            android:lineHeight="19dp"/>

        <TextView
            android:id="@+id/text_approved_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray_7"
            android:lineHeight="19dp"/>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_view_feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/panel_bottom_rounded_black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_feedback"
            android:textColor="@color/colorWhite_1"
            android:textSize="14sp"
            android:lineHeight="19dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/image_separator"
        android:layout_width="7dp"
        android:layout_height="31dp"
        android:src="@drawable/timeline_separator"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:visibility="gone"/>
</LinearLayout>