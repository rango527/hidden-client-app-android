<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_background"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"/>
    <ImageView
        android:id="@+id/image_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <ImageView
        android:id="@+id/image_play"
        android:src="@drawable/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/text_page"
        android:orientation="vertical"
        android:background="#dd000000"
        android:paddingTop="@dimen/padding_default"
        android:paddingBottom="@dimen/menu_padding_vertical_default"
        android:paddingLeft="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="this is an image"/>
        <TextView
            android:id="@+id/text_show_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray_1"
            android:text="... Show more"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1/3"
        android:textColor="@color/colorGray_1"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/menu_padding_vertical_default"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/text_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:text="Close"
        android:textColor="#fff"/>
</androidx.constraintlayout.widget.ConstraintLayout>