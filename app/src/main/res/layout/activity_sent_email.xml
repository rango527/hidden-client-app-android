<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashBackground"
    tools:context=".ui.activities.HCSentEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="45dp"
        android:paddingBottom="@dimen/menu_padding_vertical_default"
        tools:ignore="MissingConstraints,UseCompoundDrawables">

        <ImageView
            android:layout_width="108dp"
            android:layout_height="107dp"
            android:layout_gravity="center"
            android:background="@drawable/sent_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/avenir"
            android:textAlignment="center"
            android:textColor="@color/colorWhite_1"
            android:textSize="28sp"
            android:text="@string/sent_email"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>