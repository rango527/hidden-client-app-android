<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite_1"
    tools:context=".ui.activities.settings.HCResetPasswordActivity">

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/padding_default"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_reset_password"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:paddingBottom="@dimen/padding_default"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_your_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:layout_marginTop="@dimen/logo_margin_top"
            android:textColor="@color/colorBlack_2"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_current_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/textview_bold"
            android:textColor="@color/colorBlack_2"
            android:hint="@string/current_password"
            android:textColorHint="@color/colorBlack_2"
            android:background="@drawable/layout_bottom_border_only"
            android:layout_marginTop="@dimen/logo_margin_top"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/edit_new_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/textview_bold"
            android:textColor="@color/colorBlack_2"
            android:hint="@string/new_password"
            android:textColorHint="@color/colorBlack_2"
            android:background="@drawable/layout_bottom_border_only"
            android:layout_marginTop="1dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/edit_once_more"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/textview_bold"
            android:textColor="@color/colorBlack_2"
            android:hint="@string/once_more"
            android:textColorHint="@color/colorBlack_2"
            android:background="@drawable/layout_bottom_border_only"
            android:layout_marginTop="1dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:background="@color/colorGreen_1"
        android:textColor="@color/colorGray_1"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>