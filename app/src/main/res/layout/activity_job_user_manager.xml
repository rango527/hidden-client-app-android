<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activities.JobUserManagerActivity">

    <data class="UserManagerBinding">
        <variable
            name="viewModel"
            type="com.hidden.client.ui.viewmodels.main.JobUserManagerVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="24dp"
            />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_user_manager_permission"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/colorBlack_1"
            android:textSize="18sp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_user_manager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/text_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:adapter="@{viewModel.getUserManagerListAdapter}"
            android:scrollbars="none"
            android:layout_margin="26dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>