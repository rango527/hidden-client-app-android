<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.RemoveUserRoleActivity">

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_remove_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="27dp"
        android:textSize="18sp"
        android:lineHeight="25dp"
        android:textColor="@color/colorBlack_1"/>

    <LinearLayout
        android:id="@+id/layout_cascade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_remove_note"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="67dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/remove_from"
                android:textSize="14sp"
                android:textColor="@color/colorBlack_1"/>

            <ImageView
                android:id="@+id/image_remove_user_tip"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/question"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@drawable/button_round_light_gray_1x">

            <TextView
                android:id="@+id/text_new_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/button_round_white_1x"
                android:text="@string/new_processes_only"
                android:textColor="@color/colorBlack_1"/>
            <TextView
                android:id="@+id/text_new_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:gravity="center_vertical"
                android:text="@string/old_new_processes_only"
                android:textColor="@color/colorBlack_1"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/remove_user_role"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorWhite_1"
        android:text="@string/remove"
        android:textSize="18sp"
        android:background="@color/colorRed_2"/>
</androidx.constraintlayout.widget.ConstraintLayout>