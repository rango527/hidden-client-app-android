<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.HCCompanyDetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_company_bg"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/test" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_company_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"
                    android:layout_marginTop="235dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:civ_border_color="@android:color/transparent"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/img_company_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_job_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack_1"
                        android:textSize="@dimen/font_size_medium"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/text_padding"
                        android:gravity="center_horizontal"
                        android:text="Wunderman" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/layout_skills"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:flexWrap="wrap"
                        app:alignItems="stretch"
                        app:alignContent="stretch">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progress_item_purple"
                            android:drawableLeft="@drawable/brand_type"
                            android:textColor="#fff"
                            android:padding="@dimen/list_row_margin_default"
                            android:layout_marginTop="@dimen/menu_padding_vertical_default"
                            android:layout_marginLeft="@dimen/menu_padding_vertical_default"
                            android:text="   Brand"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progress_item_complete"
                            android:drawableLeft="@drawable/company_size"
                            android:textColor="#fff"
                            android:padding="@dimen/list_row_margin_default"
                            android:text="   Brand"
                            android:layout_marginTop="@dimen/menu_padding_vertical_default"
                            android:layout_marginLeft="@dimen/menu_padding_vertical_default"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progress_item_black"
                            android:drawableLeft="@drawable/pin"
                            android:textColor="#fff"
                            android:padding="@dimen/list_row_margin_default"
                            android:text="   Hamburg"
                            android:layout_marginTop="@dimen/menu_padding_vertical_default"
                            android:layout_marginLeft="@dimen/menu_padding_vertical_default"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progress_item_black"
                            android:drawableLeft="@drawable/pin"
                            android:textColor="#fff"
                            android:padding="@dimen/list_row_margin_default"
                            android:text="   London"
                            android:layout_marginTop="@dimen/menu_padding_vertical_default"
                            android:layout_marginLeft="@dimen/menu_padding_vertical_default"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/progress_item_black"
                            android:drawableLeft="@drawable/pin"
                            android:textColor="#fff"
                            android:padding="@dimen/list_row_margin_default"
                            android:text="   New York"
                            android:layout_marginTop="@dimen/menu_padding_vertical_default"
                            android:layout_marginLeft="@dimen/menu_padding_vertical_default"/>
                    </com.google.android.flexbox.FlexboxLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
</ScrollView>