<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.HCCompanyDetailActivity"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_company_bg"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:scaleType="fitXY"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/test" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_company_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/man"
                    android:layout_marginTop="235dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:civ_border_color="@android:color/transparent"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/img_company_logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_job_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack_1"
                        android:textSize="@dimen/font_size_medium"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/text_padding"
                        android:gravity="center_horizontal"
                        android:text="Wunderman" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:gravity="center_horizontal">

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/layout_skills"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:layout_gravity="center_horizontal"
                            app:flexWrap="wrap"
                            app:alignItems="stretch"
                            app:alignContent="stretch">

                            <com.hidden.client.ui.custom.CompanyDetailBadgeView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:badge_color="@drawable/progress_item_purple"
                                app:badge_title="London"
                                app:badge_icon="@drawable/pin"/>

                            <com.hidden.client.ui.custom.CompanyDetailBadgeView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:badge_color="@drawable/progress_item_complete"
                                app:badge_title="10 - 20"
                                app:badge_icon="@drawable/company_size" />

                            <com.hidden.client.ui.custom.CompanyDetailBadgeView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:badge_color="@drawable/progress_item_black"
                                app:badge_title="Hamburug"
                                app:badge_icon="@drawable/pin" />

                            <com.hidden.client.ui.custom.CompanyDetailBadgeView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:badge_color="@drawable/progress_item_black"
                                app:badge_title="London"
                                app:badge_icon="@drawable/pin" />

                            <com.hidden.client.ui.custom.CompanyDetailBadgeView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:badge_color="@drawable/progress_item_black"
                                app:badge_title="New York, NY"
                                app:badge_icon="@drawable/pin" />

                        </com.google.android.flexbox.FlexboxLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_default"
                        android:layout_margin="@dimen/menu_padding_vertical_default"
                        android:orientation="vertical"
                        android:background="@drawable/layout_round_black">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed_1"
                            android:textStyle="bold"
                            android:text="@string/what_hidden_says" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite_1"
                            android:layout_marginTop="@dimen/list_row_margin_default"
                            android:text="Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Praesent commo\nFusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Praesent commo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_default"
                        android:layout_margin="@dimen/menu_padding_vertical_default"
                        android:orientation="vertical"
                        android:background="@drawable/layout_bg_white_border_round_gray">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack_2"
                            android:textStyle="bold"
                            android:text="Textbox with a really long title to break over 2 lines" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack_2"
                            android:layout_marginTop="@dimen/list_row_margin_default"
                            android:text="Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Praesent commo\nFusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Praesent commo" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/menu_padding_vertical_default"
                        android:layout_height="350dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/test" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlack_1"
                        android:padding="@dimen/padding_default">

                        <TextView
                            android:id="@+id/text_our_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/our_people"
                            android:textColor="@color/colorWhite_1"
                            android:textSize="@dimen/textview_signup_fragment_header"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                        <ImageView
                            android:id="@+id/img_quote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            app:srcCompat="@drawable/quote"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_our_people"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_our_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/man"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/text_our_people"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/img_our_people"
                            android:padding="@dimen/padding_default"
                            android:gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Someone"
                                android:textAllCaps="true"
                                android:textColor="@color/colorWhite_1"
                                android:textSize="@dimen/textview_bold"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ffff"
                                android:textAllCaps="true"
                                android:textColor="@color/colorWhite_1"
                                android:textSize="@dimen/textview_bold"
                                android:layout_marginTop="@dimen/list_row_margin_default"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
                                android:layout_marginTop="@dimen/margin_default"
                                android:textColor="@color/colorWhite_1"
                                android:textSize="@dimen/textview_bold"/>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:src="@drawable/circle_red"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_close"
        android:paddingTop="@dimen/margin_default"
        android:paddingRight="@dimen/margin_default"/>

</androidx.constraintlayout.widget.ConstraintLayout>
