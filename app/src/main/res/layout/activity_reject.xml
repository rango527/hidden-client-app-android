<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed_1"
    tools:context=".ui.activities.shortlist.ApproveActivity">

    <ImageButton
        android:id="@+id/button_back_to_your_job"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/image_description_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left"
        android:background="@drawable/button_circle"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"/>

    <ImageView
        android:id="@+id/image_thumb_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_description_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/thumb_up_large"
        android:background="@drawable/button_circle"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"/>

    <TextView
        android:id="@+id/text_feedback_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feedback_notice3"
        android:textSize="20sp"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:textColor="@color/colorBlack_1"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/button_back_to_your_job"
        android:layout_marginTop="@dimen/menu_padding_vertical_default"/>

    <TextView
        android:id="@+id/text_feedback_notice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/feedback_notice2"
        android:textSize="13sp"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:textColor="@color/colorBlack_1"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/text_feedback_notice"
        android:layout_marginTop="@dimen/menu_padding_vertical_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/text_feedback_notice2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/default_margin_super_top"
        android:background="@drawable/button_round_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/colorBlack_2"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/menu_padding_vertical_default"
            android:text="@string/anything_else_to_add"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_default"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/colorRed_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reject"
                android:textColor="@color/colorWhite_1"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>