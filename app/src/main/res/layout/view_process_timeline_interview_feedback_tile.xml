<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_2"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/layout_timeline_interview_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="9dp"
        android:background="@drawable/panel_top_rounded_white">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorGray_7"
            android:lineHeight="19dp"
            android:text="@string/date_tbc"/>

        <TextView
            android:id="@+id/text_interview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:textColor="@color/colorGreen_1"
            android:lineHeight="25dp"
            android:text="@string/first_stage_interview"/>

        <TextView
            android:id="@+id/text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray_7"
            android:lineHeight="19dp"
            android:text="@string/location_tbc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_interviewer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/colorGray_7"
                android:lineHeight="19dp"
                android:text="@string/interviewers_tbc"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_interviewer"
                android:layout_width="120dp"
                android:layout_height="25dp">
                <TextView
                    android:id="@+id/text_interviewer_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"
                    android:text="+2"
                    android:textColor="@color/colorBlack_1"
                    android:textSize="12sp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_interviewer_4"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/circle_gray"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone"
                    app:civ_border_color="@color/colorWhite_1"
                    app:civ_border_width="2dp"
                    app:layout_constraintRight_toLeftOf="@id/text_interviewer_more"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_interviewer_3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/circle_gray"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    app:civ_border_color="@color/colorWhite_1"
                    app:civ_border_width="2dp"
                    app:layout_constraintRight_toRightOf="@id/image_interviewer_4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_interviewer_2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/circle_gray"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    app:civ_border_color="@color/colorWhite_1"
                    app:civ_border_width="2dp"
                    app:layout_constraintRight_toRightOf="@id/image_interviewer_3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_interviewer_1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/circle_gray"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    app:civ_border_color="@color/colorWhite_1"
                    app:civ_border_width="2dp"
                    app:layout_constraintRight_toRightOf="@id/image_interviewer_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_timeline_interview_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="9dp"
        android:paddingBottom="18dp"
        android:orientation="vertical"
        android:background="@drawable/panel_bottom_rounded_black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineHeight="19dp"
            android:text="@string/candidate_feedback"
            android:textColor="@color/colorWhite_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:src="@drawable/star_outline"/>
            <TextView
                android:id="@+id/text_waiting_candidate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:lineHeight="28dp"
                android:text="@string/waiting_for_feedback"
                android:textColor="@color/colorWhite_1"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_candidate_feedback_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/text_candidate_feedback_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2"
                    android:textSize="28sp"
                    android:lineHeight="28dp"
                    android:textColor="@color/colorWhite_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/out_of_five"
                    android:textSize="11sp"
                    android:lineHeight="12dp"
                    android:textColor="@color/colorWhite_1"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_candidate_feedback_status"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/button_round_red_4"
                android:textColor="@color/colorWhite_1"
                android:text="@string/pulled_out"
                android:textSize="12sp"
                android:lineHeight="16dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="false"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineHeight="19dp"
            android:layout_marginTop="21dp"
            android:text="@string/interviewer_feedback"
            android:textColor="@color/colorWhite_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:src="@drawable/star_outline"/>
            <TextView
                android:id="@+id/text_waiting_interviewer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:lineHeight="28dp"
                android:text="@string/waiting_for_feedback"
                android:textColor="@color/colorWhite_1"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_interviewer_feedback_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/text_interviewer_feedback_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2"
                    android:textSize="28sp"
                    android:lineHeight="28dp"
                    android:textColor="@color/colorWhite_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/out_of_five"
                    android:textSize="11sp"
                    android:lineHeight="12dp"
                    android:textColor="@color/colorWhite_1"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_interviewer_feedback_status"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/button_round_dark_gray_4"
                android:textColor="@color/colorWhite_1"
                android:text="@string/decision_pending"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:textSize="12sp"
                android:lineHeight="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="false"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/image_separator"
        android:layout_width="7dp"
        android:layout_height="31dp"
        android:src="@drawable/timeline_separator"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:visibility="gone"/>
</LinearLayout>