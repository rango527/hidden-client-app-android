<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panel_rounded_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:background="@drawable/panel_top_rounded_white">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorGray_7"
            android:lineHeight="19dp"
            android:text="@string/date_tbc"/>

        <TextView
            android:id="@+id/text_interview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:textColor="@color/colorGreen_1"
            android:lineHeight="25dp"
            android:text="@string/first_stage_interview"/>

        <TextView
            android:id="@+id/text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:textColor="@color/colorGray_7"
            android:lineHeight="19dp"
            android:text="@string/location_tbc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_interviewers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/colorGray_7"
                android:lineHeight="19dp"
                android:text="@string/interviewers_tbc"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_interviewers"
                android:layout_width="120dp"
                android:layout_height="25dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="9dp"
        android:paddingBottom="18dp"
        android:orientation="vertical"
        android:background="@drawable/panel_bottom_rounded_black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineHeight="19dp"
            android:text="@string/candidate_feedback"
            android:textColor="@color/colorWhite_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:src="@drawable/star_outline"/>
            <TextView
                android:id="@+id/text_waiting_candidate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:lineHeight="28dp"
                android:text="@string/waiting_for_feedback"
                android:textColor="@color/colorWhite_1"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_candidate_feedback_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_candidate_feedback_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2"
                    android:textSize="28sp"
                    android:lineHeight="28dp"
                    android:textColor="@color/colorWhite_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/out_of_five"
                    android:textSize="11sp"
                    android:lineHeight="12dp"
                    android:textColor="@color/colorWhite_1"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_candidate_feedback_status"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/button_round_red_4"
                android:textColor="@color/colorWhite_1"
                android:text="@string/pulled_out"
                android:textSize="12sp"
                android:lineHeight="16dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="false"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineHeight="19dp"
            android:layout_marginTop="21dp"
            android:text="@string/interviewer_feedback"
            android:textColor="@color/colorWhite_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:src="@drawable/star_outline"/>
            <TextView
                android:id="@+id/text_waiting_interviewer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:lineHeight="28dp"
                android:text="@string/waiting_for_feedback"
                android:textColor="@color/colorWhite_1"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_interviewer_feedback_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_interviewer_feedback_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.2"
                    android:textSize="28sp"
                    android:lineHeight="28dp"
                    android:textColor="@color/colorWhite_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/out_of_five"
                    android:textSize="11sp"
                    android:lineHeight="12dp"
                    android:textColor="@color/colorWhite_1"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_interviewer_feedback_status"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/button_round_dark_gray_4"
                android:textColor="@color/colorWhite_1"
                android:text="@string/decision_pending"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:textSize="12sp"
                android:lineHeight="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>