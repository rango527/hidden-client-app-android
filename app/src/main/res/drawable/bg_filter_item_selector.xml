<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGray_1" />
            <stroke android:width="1dp" android:color="@color/borderBottom" />
        </shape>
    </item>
    <item android:bottom="1dp" android:top="0dp">
        <shape android:shape="rectangle">
           <solid android:color="@color/colorWhite_1"/>
            <stroke android:width="1dp" android:color="@color/borderBottom" />
        </shape>
    </item>
</selector>